<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td>
          <%= link_to'Show', team %>
        </td>
        <td>
          <% if is_leader?(team)%>
            <%= link_to 'Edit', edit_team_path(team) %>
            <% end %>
        </td>
        <td>
          <% if is_leader?(team)%>
            <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
